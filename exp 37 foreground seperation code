import cv2
import numpy as np

def subtract_foreground():

    # Read image
    img = cv2.imread("barbie.jpg")

    if img is None:
        print("Image not found!")
        return

    # Convert BGR to HSV
    hsv = cv2.cvtColor(img, cv2.COLOR_BGR2HSV)

    # Define foreground color range (Example: Red object)
    lower_color1 = np.array([0, 120, 70])
    upper_color1 = np.array([10, 255, 255])

    lower_color2 = np.array([170, 120, 70])
    upper_color2 = np.array([180, 255, 255])

    # Create masks for red color
    mask1 = cv2.inRange(hsv, lower_color1, upper_color1)
    mask2 = cv2.inRange(hsv, lower_color2, upper_color2)

    mask = mask1 + mask2

    # Remove foreground (set it to black)
    result = img.copy()
    result[mask != 0] = [0, 0, 0]

    # Show results
    cv2.imshow("Original Image", img)
    cv2.imshow("Foreground Mask", mask)
    cv2.imshow("Foreground Removed", result)

    cv2.waitKey(0)
    cv2.destroyAllWindows()

# Call function
subtract_foreground()
